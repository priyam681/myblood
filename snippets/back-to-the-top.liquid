{% assign vertical_offset_for_trigger = 300 %}

{% assign position_from_bottom = '2em' %}

<div id="BackToTop" class="back-to-top hide">
    <img
            src="{{ 'chevron-up.svg' | asset_url }}"
            alt="Back to top"
            width="24"
            height="24"
            class="back-to-top-icon"
            loading="lazy"
    />
</div>


<style>
    .back-to-top {
        display: block !important;
        position: fixed;
        bottom: {{ position_from_bottom }};
        right: 15px;
        z-index: 10;
        background-color: #836851;
        cursor: pointer;
        border-radius: 50%;
        height: 50px;
        width: 50px;
        padding: 13px;
        box-sizing: border-box;
        transition: background-color 0.3s ease;
    }

    .back-to-top:hover {
        background-color: #6d563f;
    }

    .back-to-top-icon {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: invert(1); /* makes white icon if the SVG is black */
    }

    .hide {
        display: none !important;
    }

</style>
<script>
  (function() {
    function trackScroll() {
      let scrolled = window.pageYOffset;
      let coords = {{ vertical_offset_for_trigger }};
      if (scrolled > coords) {
        goTopBtn.classList.remove('hide');
      } else {
        goTopBtn.classList.add('hide');
      }
    }

    function backToTop(event) {
      if (window.pageYOffset > 0) {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
        setTimeout(backToTop, 0);
      }
    }

    let goTopBtn = document.querySelector('.back-to-top');

    window.addEventListener('scroll', trackScroll);
    goTopBtn.addEventListener('click', backToTop);
  })();

</script>
