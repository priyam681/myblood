{% if block != blank %}
    <div class="mini-banner{% if block.settings.image %} mini-banner--with-image{% endif %}"
         style="{% if block.settings.position == 'right' %}order:2;{% endif %}">
        <a href="{{ block.settings.banner_url }}" target="{% if block.settings.page_open %} _blank {% endif %}">
            {% if block.settings.image %}
                <div class="mini-banner__image">
                    {{- block.settings.image | image_url: width: 600 | image_tag:
                    loading: 'eager',
                    sizes: '(max-width: 749px) 100vw, (max-width: 990px) 50vw, 300px',
                    widths: '165, 300, 400, 600',
                    alt: block.settings.alt_text | default: block.settings.main_heading,
                    class: 'mini-banner__img' -}}
                </div>
            {% endif %}

            <div class="mini-banner__content">
                {% if block.settings.mini_banner_trigger != blank %}
                    <div class="mini-banner__trigger">
                        {{ block.settings.mini_banner_trigger }}
                    </div>
                {% endif %}

                {% if block.settings.main_heading != blank %}
                    <h2 class="mini-banner__heading">
                        {{ block.settings.main_heading | escape }}
                    </h2>
                {% endif %}

                {% if block.settings.sub_heading != blank %}
                    <h3 class="mini-banner__sub-heading">
                        {{ block.settings.sub_heading }}
                    </h3>
                {% endif %}

                {% if block.settings.offer_text != blank %}
                    <div class="mini-banner__offer">
                        {{ block.settings.offer_text }}
                    </div>
                {% endif %}
            </div>
        </a>

    </div>

    {% style %}
        .mini-banner {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        padding: 2rem 1rem;
        background-color: rgb(var(--color-background));
        border-radius: 0.5rem;
        overflow: hidden;
        margin: 1rem 0;
        }

        .mini-banner--with-image {
        background-color: transparent;
        }

        .mini-banner__image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        }

        .mini-banner__img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        }

        .mini-banner__content {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 600px;
        text-align: center;
        color: rgb(var(--color-foreground));
        }

        .mini-banner--with-image .mini-banner__content {
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.6);
        }

        .mini-banner__trigger {
        font-size: 1.4rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        opacity: 0.9;
        color: rgb(var(--color-accent, var(--color-foreground)));
        }

        .mini-banner__heading {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0 0 1rem 0;
        line-height: 1.1;
        font-family: var(--font-heading-family);
        }

        .mini-banner__sub-heading {
        font-size: 1.2rem;
        font-weight: 400;
        margin: 0 0 1.5rem 0;
        opacity: 0.9;
        line-height: 1.4;
        }

        .mini-banner__offer {
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        background-color: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 0.375rem;
        display: inline-block;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        }

        .mini-banner--with-image .mini-banner__offer {
        background-color: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
        }

        .mini-banner__offer:hover {
        background-color: rgba(255, 255, 255, 0.25);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
        }

        /* Responsive adjustments */
        @media screen and (max-width: 990px) {
        .mini-banner {
        min-height: 180px;
        padding: 1.5rem 1rem;
        }

        .mini-banner__heading {
        font-size: 2rem;
        }

        .mini-banner__trigger {
        font-size: 1.2rem;
        }

        .mini-banner__sub-heading {
        font-size: 1.1rem;
        }
        }

        @media screen and (max-width: 749px) {
        .mini-banner {
        min-height: 160px;
        padding: 1rem 0.75rem;
        margin: 0.5rem 0;
        }

        .mini-banner__heading {
        font-size: 1.5rem;
        }

        .mini-banner__trigger {
        font-size: 1rem;
        margin-bottom: 0.75rem;
        }

        .mini-banner__sub-heading {
        font-size: 1rem;
        margin-bottom: 1rem;
        }

        .mini-banner__offer {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        }
        }

        @media screen and (max-width: 480px) {
        .mini-banner {
        min-height: 140px;
        padding: 0.75rem 0.5rem;
        }

        .mini-banner__heading {
        font-size: 1.25rem;
        }

        .mini-banner__trigger {
        font-size: 0.9rem;
        }

        .mini-banner__sub-heading {
        font-size: 0.9rem;
        }
        }

    {% endstyle %}
{% endif %}