{% if block != blank %}
    <div class="mini-banner{% if block.settings.image %} mini-banner--with-image{% endif %}"
         style="{% if block.settings.position == 'right' %}order:2;{% endif %}">
        <a href="{{ block.settings.banner_url }}" target="{% if block.settings.page_open %} _blank {% endif %}">
            {% if block.settings.image %}
                <div class="mini-banner__image">
                    {{- block.settings.image | image_url: width: 500 | image_tag:
                    loading: 'eager',
                    sizes: '(max-width: 749px) 100vw, (max-width: 990px) 50vw, 300px',
                    widths: '165, 300, 400, 600',
                    alt: block.settings.alt_text | default: block.settings.main_heading,
                    class: 'mini-banner__img' -}}
                </div>
            {% endif %}

            <div class="mini-banner__content">
                {% if block.settings.main_heading != blank %}
                    <h2 class="mini-banner__heading">
                        {{ block.settings.main_heading | escape }}
                    </h2>
                {% endif %}

                {% if block.settings.sub_heading != blank %}
                    <h3 class="mini-banner__sub-heading">
                        {{ block.settings.sub_heading }}
                    </h3>
                {% endif %}

                {% if block.settings.offer_text != blank %}
                    <div class="mini-banner__offer">
                        {{ block.settings.offer_text }}
                    </div>
                {% endif %}
            </div>
        </a>

    </div>

    {% style %}
    .mega-menu__list.page-width.min-banner-menu {
      display: flex;
      gap: 10%;
      padding-block: 25px;
    }

    .mega-menu__list.page-width.min-banner-menu .mini-banner.mini-banner--with-image .mini-banner__image {
              display: flex;
                 width: 100%;
    }
    .mega-menu__list.page-width.min-banner-menu .mini-banner.mini-banner--with-image a {
       text-decoration: none;
       width: 100%;
    }
    .mega-menu__list.page-width.min-banner-menu .mini-banner.mini-banner--with-image .mini-banner__image img {
      width: 100%;
      height: 100%;
      max-height: 200px;
      object-fit: cover;
    }
    .mega-menu__list.page-width.min-banner-menu .mega-menu-subcategory-list{
            border-right: none;
            padding: 0;
    }
    .mega-menu__list.page-width.min-banner-menu .submenu-under {
        gap: 5%;
    }
    .mega-menu__list.page-width.min-banner-menu .mega-menu-subcategory-list:first-child {
            border-left: none;
    }
        .mini-banner {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        background-color: rgb(var(--color-background));
        border-radius: 0.5rem;
        overflow: hidden;
        }

        .mini-banner--with-image {
         max-width: 500px;
         width: 35%;
        }
        .mini-banner__img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        }

       .mini-banner__content {
        width: 100%;
        background: #111;
        padding: 1.6rem 4.5rem;
        display: flex;
        flex-direction: column;
        }
        .mini-banner__trigger {
        font-size: 1.4rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        opacity: 0.9;
        color: rgb(var(--color-accent, var(--color-foreground)));
        }

        .mini-banner__heading {
        font-size: 2.2rem;
        font-weight: bold;
        margin: 0 0 0.6rem 0;
        line-height: 1;
        color: #FF3200;
        }

        .mini-banner__sub-heading {
        font-size: 1.4rem;
        color: #FEFEFE;
        font-weight: 400;
        margin: 0 0 2.2rem 0;
        line-height: 1.6rem;
        }

        .mini-banner__offer {
            font-size: 1.2rem;
            line-height: 1.6rem;
            font-weight: 600;
            display: inline-block;
            color: #fff;
        }
        /* Responsive adjustments */
        @media screen and (max-width: 990px) {
        .mini-banner {
        min-height: 180px;
        padding: 1.5rem 1rem;
        }

        .mini-banner__heading {
        font-size: 2rem;
        }

        .mini-banner__trigger {
        font-size: 1.2rem;
        }

        .mini-banner__sub-heading {
        font-size: 1.1rem;
        }
        }

        @media screen and (max-width: 749px) {
        .mini-banner {
        min-height: 160px;
        padding: 1rem 0.75rem;
        margin: 0.5rem 0;
        }

        .mini-banner__heading {
        font-size: 1.5rem;
        }

        .mini-banner__trigger {
        font-size: 1rem;
        margin-bottom: 0.75rem;
        }

        .mini-banner__sub-heading {
        font-size: 1rem;
        margin-bottom: 1rem;
        }

        .mini-banner__offer {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        }
        }

        @media screen and (max-width: 480px) {
        .mini-banner {
        min-height: 140px;
        padding: 0.75rem 0.5rem;
        }

        .mini-banner__heading {
        font-size: 1.25rem;
        }

        .mini-banner__trigger {
        font-size: 0.9rem;
        }

        .mini-banner__sub-heading {
        font-size: 0.9rem;
        }
        }

    {% endstyle %}
{% endif %}