{% if product %}
{% style %}
    .wishlist-button-wrapper {
    display: inline-block;
    margin: 10px 0;
    }

    .wishlist-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background-color: #ffffff;
    border: 2px solid #e5e5e5;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    }

    .wishlist-button:hover {
    background-color: #f5f5f5;
    border-color: #d1d1d1;
    }

    .wishlist-button svg {
    width: 20px;
    height: 20px;
    }

    .wishlist-button span {
    font-size: 14px;
    font-weight: 500;
    color: #333333;
    }

    .wishlist-button-link {
    text-decoration: none;
    color: inherit;
    }

    /* Active state for when item is in wishlist */
    .wishlist-button.is-active {
    background-color: #fee7e7;
    border-color: #ff4d4d;
    }

    .wishlist-button.is-active span {
    color: #ff4d4d;
    }

    /* Disabled state */
    .wishlist-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
    .wishlist-button {
    padding: 8px 16px;
    }

    .wishlist-button span {
    font-size: 13px;
    }
    }

{% endstyle %}


    {% if customer %}
        <div class="wishlist-button-wrapper">
            <button class="wishlist-button" data-product-handle="{{ product.handle }}">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                </svg>
                <span>Add to Wishlist</span>
            </button>
        </div>
        {% else %}
        <a href="/account/login" class="wishlist-button">
        <div class="wishlist-button-wrapper">
            <button class="wishlist-button" data-product-handle="{{ product.handle }}">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                </svg>
                <span>Add to Wishlist</span>
            </button>
        </div>
    {% endif %}

{% endif %}

