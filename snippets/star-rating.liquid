<!-- Custom Star Rating (no FontAwesome dependency) -->
<style>
    .stars-outer {
        display: inline-block;
        position: relative;
        color: #ddd;
    }

    .stars-outer::before {
        content: "★ ★ ★ ★ ★";
        letter-spacing: 2px;
    }

    .stars-inner {
        position: absolute;
        top: 0;
        left: 0;
        white-space: nowrap;
        overflow: hidden;
        width: 0;
        color: #f8ce0b;
    }

    .stars-inner::before {
        content: "★ ★ ★ ★ ★";
        letter-spacing: 2px;
    }
</style>
<!-- javascript for total rating -->
{% comment %} <script
  defer
>
            
        document.addEventListener("DOMContentLoaded", function () {         
         const ratings{{id}} = {{ratingValue}} // Given rating
         const starTotal{{id}} = 5; // Total stars
         const starPercentage{{id}} = (ratings{{id}}/ starTotal{{id}}) * 100;
        const starPercentageRounded{{id}} = `${Math.round(starPercentage{{id}} / 10) * 10}%`;
          console.log(starPercentageRounded{{id}}); 
          const stars = document.querySelectorAll(`#reviews-{{ id }} .stars-inner`);
          stars.forEach((el)=>{
            el.style.width = starPercentageRounded{{id}};
          })
                
        });
</script> {% endcomment %}
