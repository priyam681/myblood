<!-- Font Awesome Icon Library -->

<link
        rel="stylesheet"
        href="{{ 'font-awesome.min.css' | asset_url }}"
        type="text/css"
        media="all"
/>
<style>
    .stars-outer::before {
        content: "\f006 \f006 \f006 \f006 \f006";
    }

    .stars-outer {
        display: inline-block;
        position: relative;
        font-family: FontAwesome;
    }


    .stars-inner {
        position: absolute;
        top: 0;
        left: 0;
        white-space: nowrap;
        overflow: hidden;
        width: 0;
    }

    .stars-inner::before {
        content: "\f005 \f005 \f005 \f005 \f005";
        color: #f8ce0b;
    }
</style>
<!-- javascript for total rating -->
{% comment %} <script
  defer
>
            
        document.addEventListener("DOMContentLoaded", function () {         
         const ratings{{id}} = {{ratingValue}} // Given rating
         const starTotal{{id}} = 5; // Total stars
         const starPercentage{{id}} = (ratings{{id}}/ starTotal{{id}}) * 100;
        const starPercentageRounded{{id}} = `${Math.round(starPercentage{{id}} / 10) * 10}%`;
          console.log(starPercentageRounded{{id}}); 
          const stars = document.querySelectorAll(`#reviews-{{ id }} .stars-inner`);
          stars.forEach((el)=>{
            el.style.width = starPercentageRounded{{id}};
          })
                
        });
</script> {% endcomment %}
