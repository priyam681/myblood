{% if link != blank %}
    {% liquid
        assign link_handle = link.title | handleize | downcase
    %}

    {% for block in section.blocks %}
        {% if block.type == 'mega-menu-promotion' and block.settings.menu_promotion_trigger == link_handle %}
            {% render 'cstm-mega-menu-promotion', block: block %}
        {% endif %}
    {% endfor %}
{% endif %}
