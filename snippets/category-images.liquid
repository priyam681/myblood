{% if link != blank %}
    {% liquid
        assign link_handle = link.title | handleize | downcase
    %}

    {% for block in section.blocks %}
        {% if block.type == 'category_image' and block.settings.target_link == link_handle %}
            {% render 'category-image', block: block, link:link %}
        {% endif %}
    {% endfor %}

{% endif %}

