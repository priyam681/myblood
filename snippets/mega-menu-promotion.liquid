{% if block != blank %}
  <style>
    .button.solid-button {
        background-color: #000;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
    }

    .button.outline-button {
        border: 2px solid #000;
        color: #000;
        padding: 10px 20px;
        text-decoration: none;
        background: transparent;
    }

    .button.link {
        color: #007aff;
        text-decoration: underline;
        padding: 0;
        background: none;
        border: none;
    }

    .mega-menu-promotions-wrapper {
        position: relative;
        display: flex;
        flex-direction: row;
    }
  </style>

  {% if block.settings.menu_promotion_enable %}
    <div class="mega-menu-promotion {{ block.settings.menu_promotion_position | replace: ' ', '-' }}">
      <div
        class="promotion-image-wrapper"
        style="
                  position: relative;
                  text-align: {{ block.settings.menu_promotion_text_alignment }};
                  display: flex;
                  align-items: {% case block.settings.menu_promotion_text_position %}
              {% when 'top' %} flex-start
              {% when 'middle' %} center
              {% when 'bottom' %} flex-end
          {% endcase %};
                  justify-content: center;
                  background-image: url('{{ block.settings.mega_menu_promotion_image | image_url }}');
                  background-size: cover;
                  background-position: center;
                  aspect-ratio: {% case block.settings.menu_promotion_image_ratio %}
              {% when 'square' %} 1 / 1
              {% when 'portrait' %} 3 / 4
              {% when 'landscape' %} 4 / 3
              {% else %} auto
          {% endcase %};
        "
      >
        <div
          class="overlay-text"
          style="
            background-color: rgba(0, 0, 0, {{ block.settings.menu_promotion_range | divided_by: 100.0 }});
            color: white;
            padding: 20px;
            width: 100%;
          "
        >
          {% if block.settings.menu_promotion_caption != blank %}
            <p class="caption">{{ block.settings.menu_promotion_caption }}</p>
          {% endif %}
          {% if block.settings.menu_promotion_heading != blank %}
            <h2 class="heading">{{ block.settings.menu_promotion_heading }}</h2>
          {% endif %}
          {% if block.settings.menu_promotion_subheading != blank %}
            <p class="subheading">{{ block.settings.menu_promotion_subheading }}</p>
          {% endif %}
          {% if block.settings.menu_promotion_button_label != blank %}
            <a
              href="{{ block.settings.menu_promotion_url }}"
              class="button {{ block.settings.menu_promotion_button_style | replace: ' ', '-' }}"
            >
              {{ block.settings.menu_promotion_button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}
