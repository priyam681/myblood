{% schema %}
{
  "name": "Colorful Kicks Section",
  "settings": [
    {
      "type": "header",
      "content": "Images section"
    },
    {
      "type": "image_picker",
      "id": "lifestyle_image",
      "label": "Right Sider Lifestyle Image"
    },

    {
      "type": "header",
      "content": "Content section"
    },
    {
      "type": "text",
      "id": "content_subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "behind_the_design",
      "label": "Behind the design"
    },
    {
      "type": "textarea",
      "id": "content_description",
      "label": "Description",
      "default": "Discover our vibrant collection of colorblocked shoes, designed with plush memory foam for all-day comfort. With a wide range of bold shades, itâ€™s easy to pick your perfect pair."
    },
    {
      "type": "header",
      "content": "Colorful content part"
    },
    {
      "type": "text",
      "id": "colourless_content_first",
      "label": "Colorless content first"
    },
    {
      "type": "text",
      "id": "colourful_content_first",
      "label": "Colorful content first"
    },
    {
      "type": "color",
      "id": "colourful_content_first_color",
      "label": "Colorful content first color"
    },
    {
      "type": "text",
      "id": "colourless_content_second",
      "label": "Colorless content second"
    },
    {
      "type": "text",
      "id": "colourful_content_second",
      "label": "Colorful content second"
    },
    {
      "type": "color",
      "id": "colourful_content_second_color",
      "label": "Colorful content second color"
    },

    {
      "type": "header",
      "content": "Button settings"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Browse Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "interval",
      "label": "Interval",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_product_info",
      "label": "Show product info",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image_showcase",
      "name": "Showcase product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Colorful Kicks"
    }
  ]
}
{% endschema %}

<script src="{{ 'colourful-hover.js' | asset_url }}" defer></script>

<section class="colorful-kicks-section page-width">
  <colourful-hover data-interval="{{ section.settings.interval | times: 1000 }}">
    <div class="container">
      <div class="left">
        <div class="text-container">
          <h4 class="section-subheading">{{ section.settings.content_subheading }}</h4>
          <div class="text-container-wrapper">
            <h2 class="section-heading">{{ section.settings.colourless_content_first }}</h2>
            <h2
              class="section-heading"
              {% if section.settings.colourful_content_first_color %}
                style="color: {{ section.settings.colourful_content_first_color }};"
              {% endif %}
            >
              {{ section.settings.colourful_content_first }}
            </h2>
            <h2 class="section-heading">{{ section.settings.colourless_content_second }}</h2>
            <h2 class="section-heading">
              {% style %}
                {% if section.settings.colourful_content_second_color %}
                  .colorful-kicks-section .text-container-wrapper h2:last-child {
                    color: {{ section.settings.colourful_content_second_color }};
                  }
                {% endif %}
              {% endstyle %}
              {{ section.settings.colourful_content_second }}
            </h2>
          </div>
          <p>{{ section.settings.content_description }}</p>
        </div>

        <div class="product-image-wrapper">
          <div class="bg-text">
            <span>{{ section.settings.behind_the_design }}</span>
          </div>
          <div class="product-images-container">
            {% for block in section.blocks %}
              {% if block.type == 'image_showcase' %}
                {% assign product = all_products[block.settings.product] %}
                {% if section.settings.show_product_info %}
                  <div class="product-image-info" data-product-id="{{ product.id }}">
                    <h4>{{ product.title }}</h4>
                  </div>
                {% endif %}

                <img
                  class="collection-image"
                  src="{{ product.featured_image | img_url: 'medium' }}"
                  alt="{{ product.title }}"
                  width="600"
                  height="600"
                  loading="lazy"
                  data-product-id="{{ product.id }}"
                >
              {% endif %}
            {% endfor %}
          </div>
        </div>

        {% if section.settings.button_link %}
          <a href="{{ section.settings.button_link }}" class="browse-btn">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>

      <div class="right">
        {% if section.settings.lifestyle_image %}
          <img src="{{ section.settings.lifestyle_image | img_url: 'master' }}" alt="Lifestyle">
        {% endif %}
      </div>
    </div>
  </colourful-hover>
</section>

<style>

  .product-image-info{
    display: none;
  }

  .colorful-kicks-section {
    padding-block: 50px;
    overflow: hidden;
  }
  .colorful-kicks-section .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: center;
    margin: auto;
  }
  .colorful-kicks-section .container .left .text-container {
    max-width: 700px;
  }
  .colorful-kicks-section .section-heading {
    font-size: calc(25px + (60 - 25) * ((100vw - 360px) / (1920 - 360)));
    margin: 10px 0;
    line-height: 1.2;
    font-weight: 800;
  }
  .colorful-kicks-section .section-subheading {
    margin-block: 0;
  }
  .colorful-kicks-section .highlight {
    color: #ff3c00;
  }
  .colorful-kicks-section p {
    font-size: 16px;
    color: #333;
  }
  .browse-btn {
    display: inline-block;
    margin-top: 20px;
    background: #ff3c00;
    color: #fff;
    padding: 10px 20px;
    border-radius: 4px;
    text-decoration: none;
  }
  .product-image-wrapper {
    position: relative;
    margin-top: 40px;
    max-height: 400px;
    max-width: 700px;
    overflow: hidden;
  }

  .collection-image {
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .product-images-container {
    display: flex;
  }

  .product-images-container > .collection-image{
    width:100%;
  }

  .collection-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-images-container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .collection-image {
    position: relative;
    width: 100%;
    height: auto;
    opacity: 0;
    transition: opacity 1s ease;
  }
  .collection-image:first-child {
    opacity: 1;
  }
  .product-image-wrapper .bg-text {
    position: absolute;
    color: #5d5d5d24;
    top: 42%;
    left: 7%;
    transform: translate(0, -50%);
    line-height: 1;
    text-align: center;
    z-index: 1;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 9px;
  }
  .product-image-wrapper .bg-text .middle-content {
    padding-left: 50%;
  }
  .product-image-wrapper img {
    position: relative;
    z-index: 2;
    max-width: 100%;
  }
  .colorful-kicks-section .right {
    flex: 1;
    min-width: 300px;
    overflow: hidden;
  }
  .colorful-kicks-section .right img {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    display: block;
    object-fit: cover;
  }
  @media (max-width: 992px) {
    .colorful-kicks-section .container {
      grid-template-columns: 1fr;
    }
    .product-image-wrapper .bg-text {
      font-size: calc(45px + (120 - 45) * ((100vw - 360px) / (992 - 360)));
    }
  }
  @media (min-width: 992px) {
    .product-image-wrapper .bg-text {
      font-size: calc(45px + (120 - 45) * ((100vw - 992px) / (1920 - 992)));
    }
  }
</style>
