
<section class="max-w-screen-xl mx-auto p-4 grid grid-cols-1 lg:grid-cols-3 gap-4">
  <!-- Left Column: 2 Blocks -->
  <div class="grid grid-cols-1 gap-4">
    <!-- BLACK Armchairs -->
    <div class="bg-white p-6 flex items-center justify-between shadow">
      <img src="{{ 'black-armchairs.png' | asset_url }}" alt="Black Armchairs" class="w-1/2 object-contain">
      <div class="text-right">
        <h3 class="text-lg font-semibold uppercase">Black <br><span class="font-bold text-xl">Armchairs</span></h3>
        <p class="text-sm text-red-500 mt-2 mb-4">Starting from $399</p>
        <a href="#" class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm font-medium">
          Shop Now →
        </a>
      </div>
    </div>

    <!-- Bottom Row: Cool Lamps & Jacuzzi -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Cool Lamps -->
      <div class="bg-gray-900 text-white p-4 flex flex-col justify-between">
        <div>
          <p class="text-xs tracking-widest">CHECK NEW ARRIVALS</p>
          <h3 class="text-xl font-bold mt-2">COOL LAMPS</h3>
        </div>
        <img src="{{ 'cool-lamp.png' | asset_url }}" alt="Cool Lamps" class="mt-4">
      </div>

      <!-- Jacuzzi -->
      <div class="bg-blue-700 text-white p-4 flex flex-col justify-between">
        <div>
          <p class="text-xs uppercase tracking-widest">Exclusive New Collection</p>
          <h3 class="text-xl font-bold mt-2">Luxurious Jacuzzi</h3>
        </div>
        <img src="{{ 'jacuzzi.png' | asset_url }}" alt="Jacuzzi" class="mt-4">
      </div>
    </div>
  </div>

  <!-- Right Column: Big Chair Promotion -->
  <div class="col-span-1 lg:col-span-2 bg-white p-8 flex flex-col lg:flex-row items-center justify-between shadow">
    <div class="max-w-md">
      <h2 class="text-3xl font-bold">WOODEN<br><span class="text-2xl">Black Chair</span></h2>
      <div class="mt-4">
        <span class="inline-block bg-black text-white font-semibold px-3 py-1 mr-2">GO COUPON</span>
        <span class="inline-block text-black text-xl font-bold">UP TO <span class="text-black">$100</span> OFF</span>
      </div>
      <p class="text-sm text-red-500 mt-2 mb-4">Starting from $199</p>
      <a href="#" class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm font-medium">
        Shop Now →
      </a>
    </div>
    <div class="mt-6 lg:mt-0">
      <img src="{{ 'wooden-black-chair.png' | asset_url }}" alt="Wooden Black Chair" class="w-72 object-contain">
    </div>
  </div>
</section>



