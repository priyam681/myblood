{% schema %}
{
  "name": "Action Grid",
  "tag": "section",
  "class": "action-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "Action Categories"
    },
    {
      "type": "textarea",
      "id": "categories",
      "label": "Category List",
      "default": "HIKING\nTRAILRUNNING\nTRAINING\nEVERYDAY\nROAD RUNNING\nSWIMRUN"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Action Grid Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .action-grid-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: space-between;
    align-items: flex-start;
    margin: 40px 0;
  }
  .action-text {
    flex: 1;
    min-width: 200px;
    font-family: Arial, sans-serif;
  }
  .action-text h2 {
    font-size: 12px;
    color: #333;
    margin-bottom: 10px;
  }
  .action-text ul {
    list-style: none;
    padding: 0;
    font-size: 28px;
    font-weight: bold;
    line-height: 1.4;
  }
  .action-text ul li {
    margin-bottom: 5px;
  }
  .action-images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    flex: 1;
    min-width: 300px;
  }
  .action-images img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 4px;
  }

  @media screen and (max-width: 768px) {
    .action-grid-container {
      flex-direction: column;
    }
    .action-images {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

<div class="action-text">
  <h2>CHOOSE YOUR ACTION</h2>
  <ul>
    {% assign categories = section.settings.categories | newline_to_br | split: '<br />' %}
    {% for category in categories %}
      <li>{{ category }}</li>
    {% endfor %}
  </ul>
</div>


  <div class="action-images">
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <a href="{{ block.settings.link }}">
          <img src="{{ block.settings.image | img_url: '500x' }}" alt="Action image">
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>
