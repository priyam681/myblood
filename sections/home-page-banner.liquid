{% style %}

  .banner-slideshow-wrapper {
  position: relative;
  overflow: hidden;
  {% case section.settings.section_height %}
    {% when 'small' %}
      min-height: 400px;
    {% when 'medium' %}
      min-height: 500px;
    {% when 'large' %}
      min-height: 600px;
    {% when 'extra_large' %}
      min-height: 700px;
    {% when 'full_screen' %}
      min-height: 100vh;
  {% endcase %}
  }

  .homepage-banner {
  {% if section.settings.enable_overlay %}
    position: relative;
  {% endif %}
  {% case section.settings.content_position %}
    {% when 'top' %}
      align-items: flex-start;
      padding-top: 3rem;
    {% when 'center' %}
      align-items: center;
    {% when 'bottom' %}
      align-items: flex-end;
      padding-bottom: 3rem;
  {% endcase %}
  }

  {% if section.settings.enable_overlay %}
    .homepage-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.overlay_color | default: '#000000' }};
    opacity: {{ section.settings.overlay_opacity | default: 30 | divided_by: 100.0 }};
    z-index: 0;
    }
  {% endif %}



  {% unless section.settings.show_navigation_arrows %}
    .slider-buttons-wrapper {
    display: none !important;
    }
  {% endunless %}

  {% if section.settings.show_navigation_arrows %}
    .slider-button {
    background: {{ section.settings.arrow_background | default: '#000000' | color_modify: 'alpha', section.settings.arrow_opacity | default: 70 | divided_by: 100.0 }};
    color: {{ section.settings.arrow_color | default: '#ffffff' }};
    {% if section.settings.arrow_position == 'outside' %}
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
    {% endif %}
    }

    {% if section.settings.arrow_position == 'outside' %}
      .slider-button--prev {
      left: -60px;
      }
      .slider-button--next {
      right: -60px;
      }
      .slider-buttons-wrapper {
      position: static;
      width: 100%;
      height: 0;
      }
    {% endif %}
  {% endif %}

  {% if section.settings.show_slide_dots %}
    .slide-dots {
    display: flex;
    justify-content: center;
    gap: 10px;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    }
    .slide-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    }
    .slide-dot.active {
    background: rgba(255, 255, 255, 1);
    transform: scale(1.2);
    }
  {% endif %}

  /* Mobile Settings */
  @media screen and (max-width: 992px) {
  .banner-slideshow-wrapper {
  {% case section.settings.mobile_height %}
    {% when 'small' %}
      min-height: 300px;
    {% when 'medium' %}
      min-height: 400px;
    {% when 'large' %}
      min-height: 500px;
    {% when 'auto' %}
      /* Keep desktop height */
  {% endcase %}
  }

  {% if section.settings.mobile_stack_content %}
    .banner-content {
    max-width: 90%;
    text-align: center;
    margin: 0 auto;
    }
  {% endif %}

  {% if section.settings.arrow_position == 'outside' %}
    .slider-button--prev {
    left: 10px;
    }
    .slider-button--next {
    right: 10px;
    }
  {% endif %}
  }

  /* Reduced Motion */
  {% if section.settings.reduce_motion %}
    @media (prefers-reduced-motion: reduce) {
    .banner-slideshow {
    scroll-behavior: auto;
    }
    .slider-button,
    .button {
    transition: none;
    }
    }
  {% endif %}
{% endstyle %}


