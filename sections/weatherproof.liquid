<head>
  <!-- Include FontAwesome Library -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

{%- style -%}
        @media screen and (min-width: 1536px) {
          .weatherproof-wrapper .weatherproof-content h2 {
            font-size: 68px;
          }
        }

    @media screen and (max-width: 768px) {
    .weatherproof-wrapper {
           padding-inline: 1.5rem;
    }
  }
   @media screen and (min-width: 768px) {
        .weatherproof-wrapper {
           padding-inline: 3rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .weatherproof-wrapper .weatherproof-image {
          width: 50%;
        }
        .weatherproof-wrapper .weatherproof-content {
          width: 45%;
        }
      }
  @media screen and (max-width: 992px) {
          .weatherproof-wrapper .weatherproof-content h2 {
            font-size: 32px;
          }
        }
  @media screen and (min-width: 992px) {
            .weatherproof-wrapper {
          padding-inline: 5rem;
         }
          .weatherproof-wrapper .weatherproof-content h2 {
            font-size: 50px;
          }
        }

       .weatherproof-image  img {
            transform: scaleX(-1);
            display: flex;
            justify-content: center;
            width: 100%;
            object-fit: contain;
            background-position: center;
            background-size: cover;
        }
    .weatherproof-wrapper {
            max-width: 1600px;
            margin: auto;
           flex-direction: row-reverse;
        }
          .weatherproof-wrapper .weatherproof-content h2 {
            font-weight: bold;
          }
      .weatherproof-wrapper .weatherproof-content ul {
        padding-left: 0;
      }
      .weatherproof-wrapper .weatherproof-content ul li {
        display: flex;
        gap: 10px;
        align-items:center;
      }
      /* .weatherproof-wrapper .weatherproof-content ul li svg {
        margin-top: 8px;
      } */
      .weatherproof-wrapper .weatherproof-content ul li a {
         color: #afa39a;
      }
          }
{%- endstyle -%}

<div class="weatherproof-wrapper">
  <div class="weatherproof-image">
    <img src="{{  section.settings.image | image_url: width: 800 }}" alt="Custom Image"  width="100%"
      height="100%">
  </div>
  <div class="weatherproof-content">
    <h2 class="">
      {{ 'sections.sections.weatherproof.heading' | t }}
      </h2>
    <div class="">
      <p>
        {{ section.settings.subheading }}
       
      </p>
    </div>

    <ul class="">
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="20">
          <path fill="#000000" d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/>
        </svg>
        <span>{{ section.settings.span1 }} </span>
      </li>
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="20">
          <path fill="#000000" d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/>
        </svg>
        <div>
          <span>{{ section.settings.span2 }}</span>
        </div>
      </li>
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="16" height="20">
          <path fill="#000000" d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/>
        </svg>

        <span>{{ section.settings.span3}} </span>
      </li>
    </ul>

    <p class="link-btn"><a href="/products" class=" button-palette-black">Discover now&nbsp;</a></p>
  </div>
</div>

{% schema %}
{
  "name": "Weatherproof",
  "settings": [
    {
     "type": "text",
      "id": "heading",
      "label": "{{ 'sections.sections.weatherproof.heading' | t }}",
      "default": "This is a heading"
    },
     {
      "type": "image_picker",
      "id": "image",
      "label": "Select an Image"
    },
     {
     "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "This is a Subheading"
    },
     {
     "type": "text",
      "id": "span1",
      "label": "Subheading",
      "default": "This is a Subheading"
    },
     {
     "type": "text",
      "id": "span2",
      "label": "Subheading",
      "default": "This is a Subheading"
    },
     {
     "type": "text",
      "id": "span3",
      "label": "Subheading",
      "default": "This is a Subheading"
    },
    
  ],
     "presets": [
  {
    "name": "Weatherproof",

  }
]
}
{% endschema %}
