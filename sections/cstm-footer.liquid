<script>
  document.addEventListener('DOMContentLoaded', function () {
    const detailsElements = document.querySelectorAll('.footer-dropdown');

    // Debounce function to limit the rate at which a function can fire
    function debounce(func, wait) {
      let timeout;
      return function (...args) {
        const context = this;
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(context, args), wait);
      };
    }

    // Function to update details behavior based on screen size
    function updateDetailsBehavior() {
      const isMobile = window.matchMedia('(max-width: 768px)').matches;

      detailsElements.forEach((el) => {
        if (isMobile) {
          el.removeAttribute('open');
        } else {
          el.setAttribute('open', 'true');
        }
      });
    }

    // Initial check
    updateDetailsBehavior();

    // Debounced resize event listener
    const debouncedUpdate = debounce(updateDetailsBehavior, 200);
    window.addEventListener('resize', debouncedUpdate);

    // pageshow event listener
    window.addEventListener('pageshow', updateDetailsBehavior);
  });
</script>

