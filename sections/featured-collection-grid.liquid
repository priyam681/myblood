{%- style -%}
@media (min-width: 768px) {
  .featured-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  .featured-overlay .title {
    font-size: calc(22px + (45 - 22) * ((100vw - 768px) / (1920 - 768)));
    }
}
@media (max-width: 768px) {
.featured-grid {
   grid-template-columns: 1fr;
  }
  .featured-overlay .title {
    font-size: calc(22px + (45 - 22) * ((100vw - 360px) / (768 - 360)));
    }
}
.featured-grid {
  margin: 0 auto;
  display: grid;
  gap: 4.5rem;
}
.featured-card {
  position: relative;
  overflow: hidden;
}

.featured-card img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
  object-position: top;
}

.featured-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 2.5rem 3.8rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  color: #fff;
}

.featured-overlay .brand {
  text-transform: uppercase;
  font-size: 2rem;
  letter-spacing: 1px;
  line-height: 15px;
  margin: 0;
}

.featured-overlay .title {
  color: #fff;
  font-weight: bold;
  margin-bottom: 2.5rem;
  margin-top: 18px;
  line-height: 1.1;
  max-width: 450px;
}

.featured-overlay .price {
      display: flex;
    align-items: baseline;
    gap: 4px;
   font-size: calc(16px + (20 - 16) * ((100vw - 360px) / (1920 - 360)));
  color: #fff;
}

.featured-overlay .price .price-value {
  font-size: calc(22px + (35 - 22) * ((100vw - 360px) / (1920 - 360)));
  line-height: 1.1;
  color: #FFD700;
  font-weight: bold;
}
{%- endstyle -%}


<div class="featured-grid page-width">
  {% for block in section.blocks %}
    {% assign collection = collections[block.settings.collection] %}
    {% if collection.products.size > 0 %}
      {% case block.settings.product_to_display %}
        {% when 'first' %}
          {% assign product = collection.products.first %}
        {% when 'last' %}
          {% assign product = collection.products.last %}
        {% when 'specific' %}
          {% if block.settings.specific_product != blank %}
            {% assign product = all_products[block.settings.specific_product] %}
          {% else %}
            {% assign product = collection.products.first %}
          {% endif %}
        {% when 'random' %}
          {% assign random_number = "now" | date: "%N" | modulo: collection.products.size %}
          {% assign product = collection.products[random_number] %}
        {% else %}
          {% assign product = collection.products.first %}
      {% endcase %}

      <div class="featured-card">
        {% if block.settings.custom_image != blank %}
          <img src="{{ block.settings.custom_image | image_url: width: 600 }}" alt="{{ collection.title | escape }}">
        {% else %}
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title | escape }}">
        {% endif %}

        <div class="featured-overlay">
          <p class="brand">{{ block.settings.brand }}</p>

          {% if block.settings.show_collection_title %}
            <h2 class="title">{{ collection.title }}</h2>
          {% else %}
            <h2 class="title">{{ product.title }}</h2>
          {% endif %}

          <div class="price">
            <span style="color: {{ block.settings.highlighted_text_color }};">{{ block.settings.highlighted_text }}</span>
            {% if block.settings.custom_price != blank %}
              <span class="price-value" style="color: {{ block.settings.price_color }};">{{ block.settings.custom_price |  money }}</span>
            {% else %}
              <span class="price-value" style="color: {{ block.settings.price_color }};">{{ product.price | money }}</span>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>


{% schema %}
{
  "name": "Featured Collection Grid",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Add Collection"
        },
        {
          "type": "header",
          "content": "Product Display Options"
        },
        {
          "type": "select",
          "id": "product_to_display",
          "label": "Product to Display",
          "options": [
            {
              "value": "first",
              "label": "First Product"
            },
            {
              "value": "last",
              "label": "Last Product"
            },
            {
              "value": "specific",
              "label": "Specific Product"
            },
            {
              "value": "random",
              "label": "Random Product"
            }
          ],
          "default": "first"
        },
        {
          "type": "product",
          "id": "specific_product",
          "label": "Specific Product",
          "info": "Only used if 'Specific Product' is selected above"
        },
        {
          "type": "checkbox",
          "id": "show_collection_title",
          "label": "Show Collection Title (instead of Product Title)",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Image (optional)"
        },
        {
          "type": "text",
          "id": "custom_price",
          "label": "Custom Price (optional)",
          "info": "Overrides product price if provided"
        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type": "text",
          "id": "brand",
          "label": "Brand"
        },
        {
          "type": "text",
          "id": "highlighted_text",
          "label": "Highlighted Text",
          "default": "Starting from"
        },
        {
          "type": "color",
          "id": "highlighted_text_color",
          "label": "Highlighted Text Color",
          "default": "#FFFFFF"
        },
        {
          "type":"color",
          "id":"price_color",
          "label":"Price Color",
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Featured Collection Grid",
      "blocks": []
    }
  ]
}
{% endschema %}